<!-- namespace = mapper파일의 아이디 값 -->
<mapper namespace="kr.co.oauth.dao.OauthDAO">
	
	<select id="selectCountEmail" resultType="int">
		SELECT COUNT(`email`) AS 'count' FROM `users` 
		WHERE `email` = #{email};
	</select>
  	
  	<insert id="insertNaverUser">
  	INSERT INTO `users` SET
		`username` 		= #{username},
		`email` 		= #{email},
		`nickname` 		= #{nickname},
		`sns_id` 		= #{sns_id},
		`sns_type` 		= 'naver',
		`create_date` 	= NOW();
  	</insert>
  	
  	<insert id="">
  		INSERT INTO `sns_info` SET
  			`id` 	 = #{id}
			`sns_id` = #{sns_id},
			`sns_type` = 'naver',
			`sns_connect_date` = NOW();
  	</insert>
	
</mapper>