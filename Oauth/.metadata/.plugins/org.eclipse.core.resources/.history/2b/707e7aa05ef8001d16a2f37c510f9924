package kr.co.oauth.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import kr.co.oauth.service.OauthService;

@Controller
public class MainController {
	
	@Autowired
	private OauthService service;
	
	@GetMapping("login")
	public String login() {
		return "login";
	}
	
	@ResponseBody
	@GetMapping("oauth/countEmail")
	public String countEmail(@RequestParam("email") String email) {
		
		System.out.println("email 컨트롤러 : " + email);
		
		//int result = service.selectCountEmail(email);
	
		return "";
	}
	
	@GetMapping("registger")
	public String registger() {
		return "registger";
	}
	
	@GetMapping("complete")
	public String complete() {
		return "complete";
	}

}
