<script type="text/javascript">
	var naver_id_login = new naver_id_login("TJkEN42q_le7xqqIPH1h", "http://localhost:8080/Naver/complete");
	var state = naver_id_login.getUniqState();
	naver_id_login.setButton("white", 1, 40);
	naver_id_login.setDomain("http://localhost:8080/Oauth/login");
	naver_id_login.setState(state);
	naver_id_login.setPopup();
	naver_id_login.init_naver_id_login();
	
	function logout(){
		naver_id_login.revokeAccessToken();
		alert("로그아웃 클릭")
	}
</script>