<script type="text/javascript">
	var naver_id_login = new naver_id_login("TJkEN42q_le7xqqIPH1h", "http://localhost:8080/Oauth/complete");
	  // 접근 토큰 값 출력
	  	//alert(naver_id_login.oauthParams.access_token);
	  // 네이버 사용자 프로필 조회
	  naver_id_login.get_naver_userprofile("naverSignInCallback()");
	  // 네이버 사용자 프로필 조회 이후 프로필 정보를 처리할 callback function
	  function naverSignInCallback() {
		  let email = naver_id_login.getProfileData('email');
		  
		  console.log("email : " + email);
		  
		  let jsonData = {"email" : email};
		  
		  $.ajax({
			  url : "/Oauth/oauth/countEmail",
			  method : "GET",
			  data : jsonData,
			  dataType : "json",
			  success : function(data){
				  if(data.result == 0){
					  alert("사용가능한 아이디입니다.");
					  popupClosed();
				  }else{
					  alert("중복입니다.");
					  locaiton.href="/Oauth/login";
				  }
			  }// success 구문 끝
		  });
	  }
	  
	  function popupClosed() {
			// 팝업이 닫힌 후에 수행할 작업을 여기에 추가하세요.
			alert("팝업이 닫혔습니다.");
			// 팝업 창이 닫힌 후에 페이지 이동 등의 작업을 수행할 수 있습니다.
			window.location.href = "/Oauth/login"; // 기존 로그인 페이지로 이동
		}
	  
</script>
